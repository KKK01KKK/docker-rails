<!DOCTYPE html>
<html>
  <head>
    <title>英語コーチング比較ナビ</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <header>
    <div class="header-logo">
      <% if @current_coach %>
          <%= link_to("英語コーチング比較ナビ", "/courses/index") %>
      <% else %>
          <%= link_to("英語コーチング比較ナビ", "/") %>
      <% end %>
    </div>
    <ul class="header-menus">
        <% if @current_coach %>
          <li>
            <%= link_to(@current_coach.name, "/coaches/#{@current_coach.id}") %>
          </li>
          <li>
            <%= link_to("コース一覧", "/courses/index") %>
          </li>
          <li>
            <%= link_to("新規コース作成", "/courses/new") %>
          </li>
          <li>
            <%= link_to("コーチ一覧", "/coaches/index") %>
          </li>
          <li>
            <%= link_to("ログアウト", "/logout", data: { "turbo-method": :post }) %>
          </li>
        <% else %>
          <li>
            <%= link_to("英語コーチング比較ナビとは", "/about") %>
          </li>
          <li>
            <%= link_to("新規登録", "/signup") %>
          </li>
          <li>
            <%= link_to("ログイン", "/login") %>
          </li>
        <% end %>
      </ul>
  </header>

  <% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <body>
    <%= yield %>
  </body>
</html>