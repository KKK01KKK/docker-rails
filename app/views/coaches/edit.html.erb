<div class="main coachs-edit">
  <div class="container">
    <div class="form-heading">ユーザー情報の編集</div>
    <div class="form coachs-form">
      <div class="form-body">
        <% @coach.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        <%= form_tag("/coaches/#{@coach.id}/update", {multipart: true}) do %>
            <p>コーチ名</p>
            <input value="<%= @coach.name %>" name="name">
            <p>画像</p>
            <input name="image" type="file">
            <p>メールアドレス</p>
            <input value="<%= @coach.email %>" name="email">
            <p>自己紹介</p>
            <textarea name="self_introduction"><%= @coach.self_introduction %></textarea>
            <p>資格</p>
            <textarea name="qualification"><%= @coach.qualification %></textarea>
            <p>指導実績</p>
            <textarea name="achievement"><%= @coach.achievement %></textarea>
            <p>空き状況</p>
            <textarea name="opening_slot"><%= @coach.opening_slot %></textarea>
            <input type="submit" value="保存">
        <% end %>
      </div>
    </div>
  </div>
</div>